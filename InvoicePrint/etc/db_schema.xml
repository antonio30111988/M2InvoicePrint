<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="sales_invoice" resource="sales" engine="innodb">
        <column xsi:type="smallint" name="is_printed" padding="2" unsigned="true" default="0" nullable="false"
                comment="Mark invoice printed"/>
    </table>

    <table name="sales_invoice_grid" resource="sales" engine="innodb">
        <column xsi:type="smallint" name="is_printed" padding="2" unsigned="true" default="0" nullable="false"
                comment="Mark invoice printed"/>
    </table>
</schema>
